<%= render 'shared/users_info', user: @user%>
<div class="user-bio">
  <p class="bio">
    <%= @user.bio %>
  </p>
</div>
<% @user.most_recent_posts.each do |post| %>
  <div class="posts">
    <h2><%= post.title %></h2>
    <p><%= post.text %></p>
    <p class="right">Number of comments: <%= post.commentsCount %>
      - Number of likes: <%= post.likesCount %>
      <%= button_to 'Like', user_post_likes_path(post.user, post), class: "like" %>
    </p>
  </div>
<% end %>
<div class="button-cont">
  <%= link_to 'See all posts', user_posts_path(@user), class: "see-all" %>
</div>